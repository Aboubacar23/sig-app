{% extends 'base.html.twig' %}

{% block title %}Personnel index{% endblock %}

{% block body %}
<div class="content-wrapper">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="row">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-header">

                                <div class="row">
                                    <div class="col-md-3">
                                        <h4 class="card-title">Liste des personnels</h4>
                                    </div>
                                    <div class="col-md-9 text-end">
                                        <a href="#" class="btn btn-secondary text-white">Nombres : {{ personnels | length}}</a>
                                        <a href="{{path('app_personnel_new')}}" class="btn btn-primary btn-flow">Ajouter<i class="mdi mdi-plus"></i></a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                {% for message in app.flashes('success') %}
                                    <div class="alert alert-success">
                                        {{ message }}
                                    </div>
                                {% endfor %}
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead class="table-dark">
                                        <tr>
                                            <th width="2">N°</th>
                                            <th>Image</th>
                                            <th>Code Personnels</th>
                                            <th>Nom</th>
                                            <th>Prenom</th>
                                            <th>Telephone</th>
                                            <th>Email</th>
                                            <th>Pays</th>
                                            <th class="text-center" width="250">Actions</th>
                                        </tr>
                                        </thead>
                                        <tbody>

                                        {% set i = 0 %}
                                        {% for personnel in personnels %}
                                            {% set i = i + 1 %}
                                            <tr>
                                                <td>{{ i }}</td>
                                                <td>
                                                    {% if personnel.image == '' %}
                                                        <img src="{{asset('images/images/user.png')}}" height="70px" width="70px">
                                                    {% else %}
                                                        <img src="{{asset('images/employees/'~ personnel.image)}}" height="70px" width="70px">
                                                    {% endif %}
                                                </td>
                                                <td>{{ personnel.codePersonnel }}</td>
                                                <td>{{ personnel.nom }}</td>
                                                <td>{{ personnel.prenom }}</td>
                                                <td>{{ personnel.tel }}</td>
                                                <td>{{ personnel.email }}</td>
                                                <td>{{ personnel.pays | country_name }}</td>
                                                <td class="text-center">
                                                    <a class="btn-sm btn btn-success text-white btn-sm" href="{{path('app_personnel_show', {'id' : personnel.id})}}">Détails <i class="mdi mdi-eye"></i></a>
                                                    <a class="btn-sm btn btn-primary btn-sm" href="{{path('app_personnel_edit', {'id' : personnel.id})}}">Modifier <i class="mdi mdi-pencil-box-outline"></i></a>
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="10">Pas d'administrateur </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

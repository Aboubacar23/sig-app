{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<div class="container-xl">
    <div class="page-header d-print-none">
        <div class="row g-2 align-items-center">
            <div class="col">
                <h2 class="page-title">Entrepot</h2>
            </div>
            <div class="col-12 col-md-auto ms-auto d-print-none">
                <div class="btn-list">
                    <span class="d-none d-sm-inline">
                        <a href="{{ path('app_approvision') }}" class="btn btn-secondary btn-sm">Retour</a>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="page-body">
    <div class="container-xl">
        <div class="row row-cards">
            <div class="col-12">
                <div class="card">
                    <div class="card-header mb-2">
                        <h3 class="card-title">Approvisionnement</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="row mb-2">
                                <table class="table card-table m-2">
                                    <thead class="table-dark">
                                        <tr>
                                            <td>Produit</td>
                                            <td>Code Produit</td>
                                            <td>Libele</td>
                                            <td>Quantité</td>
                                            <td>Nouvelle Quantité</td>
                                        </tr>
                                    </thead>
                                    <tbody> 
                                        <tr>
                                            <td>
                                                {% if produit.image == '' %}
                                                    <img src="{{asset('images/produit.jpeg')}}" width="40px" height="40px">
                                                {% else %}
                                                    <img src="{{asset('images/produits/'~ produit.image)}}" width="40px" height="40px">
                                                {% endif %}
                                            </td>
                                            <td>{{ produit.codeProduit}}</td>
                                            <td>{{ produit.libelle}}</td>
                                            <td>
                                                {% if produit.quantite >= produit.stockInitial %}
                                                    <span class="btn btn-success btn-sm">{{ produit.quantite }}</span>
                                                {% else %}
                                                    <span class="btn btn-danger btn-sm">{{ produit.quantite }}</span>
                                                {% endif %}
                                            </td>
                                            <td>{{ form_widget(form.quantite, { 'attr' : { value: 0}})}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="row mb-2">
                                <div class="col-md-12 text-center">
                                    <button class="btn btn-dark btn-sm" onclick="confirm('Voulez-vous confirmer ?')">{{ button_label|default('Re-Approvisionné') }} <i class="fa fa-plus-circle p-1"></i></button>
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

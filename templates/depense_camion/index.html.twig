{% extends 'base.html.twig' %}

{% block title %}DepenseCamion index{% endblock %}

{% block body %}
<div class="content-wrapper">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="row">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-header">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h4 class="card-title">Liste des dépenses camions</h4>
                                    </div>
                                    <div class="col-md-9 text-end">
                                        <a href="#" class="btn btn-secondary btn-sm text-white">Nombres : {{ depense_camions | length}}</a>
                                        <a href="{{ path('app_camion_index') }}" class="btn btn-primary btn-sm text-white">Allez au Camion</a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                {% for message in app.flashes('success') %}
                                    <div class="alert alert-success">
                                        {{ message }}
                                    </div>
                                {% endfor %}
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead class="table-dark">
                                        <tr>
                                            <th width="2">N°</th>
                                            <th>Date Dépense</th>
                                            <th>Banque</th>
                                            <th>Montant</th>
                                            <th>Mode paiement</th>
                                            <th>Numéro cheque</th>
                                            <th>Ordre De</th>
                                            <th>Observation</th>
                                            <th class="text-center" width="150"></th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% set i = 0 %}
                                        {% set montant = 0 %}
                                        {% for item in depense_camions  %}
                                            {% set montant = montant + item.montant %}
                                            {% set i = i + 1 %}
                                            <tr>
                                                <td>{{ i }}</td>
                                                <td>{{ item.dateDepense ? item.dateDepense|date('Y-m-d') : '' }}</td>
                                                <td>{{ item.banque }}</td>
                                                <td>{{ item.montant | number_format }}</td>
                                                <td>{{ item.modePaiement }}</td>
                                                <td>{{ item.numeroCheque }}</td>
                                                <td>{{ item.ordreDe }}</td>
                                                <td>{{ item.observation }}</td>
                                                <td>
                                                    <a class="btn btn-danger btn-sm text-white" href="{{ path('app_depense_camion_delete', {'id': item.id}) }}" onclick="return confirm('Voulez-vous confirmer ?')"><i class="mdi mdi-delete mdi-24px"></i></a>
                                                    <a class="btn btn-primary btn-sm" href="{{ path('app_depense_camion_edit', {'id': item.id}) }}"><i class="mdi mdi-pencil-box-outline mdi-24px"></i></a>
                                                </td>
                                            </tr>
                                        {% else  %}
                                            <tr>
                                                <td colspan="12" class="text-center">Pas de dépense</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                        <tfoot class="table-secondary">
                                        <tr>
                                            <th colspan="3">Total</th>
                                            <th>{{ montant | number_format }} GNF</th>
                                            <th colspan="5"></th>
                                        </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>









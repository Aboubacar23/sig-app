{% extends 'base123.html.twig' %}

{% block title %}New Versement{% endblock %}

{% block body %}

<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header"> 
            <div class="row"> 
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        <h4>Sonoya Stock</h4>
                    </div>
                    <nav aria-label="breadcrumb" role="navigation">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{path('app_home')}}">Home</a>
                            <li class="breadcrumb-item" aria-current="page">Comptabilités</li>
                            <li class="breadcrumb-item active" aria-current="page">Versements</li>
                            <li class="breadcrumb-item active" aria-current="page">Facture {{ factureClient.numeroFacture }}</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-md-6 col-sm-12 text-right">
                    <div class="dropdown">
                        <a class="btn btn-primary btn-sm" href="#" role="button" data-toggle="dropdown">
                            Paiement Facture
                        </a>
                    </div>
                </div>
            </div>
        </div> 
        <div class="card-box mb-30">
            <div class="card-header pd-10 text-right">
                <div class="row">
                    <div class="col-md-6 text-left">
                        <a href="#{}" class="btn btn-info btn-sm text-white">Montant à payer <i class="fa fa-money p-1"></i> {{ reste }}</a>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="{{ path('app_facture_client_index') }}" class="btn btn-secondary btn-sm text-white">Retour <i class="fa fa-reply p-1"></i></a>
                    </div>
                </div>
            </div>
            <div class="p-4">
                {% for flash_message in app.session.flashbag.get('error') %}
                    <div class="container alert alert-danger" role="alert">
                        {{ flash_message }}
                    </div>
                {% endfor %}

               {{ form_start(form) }}
                    <div class="row mb-2">
                        <div class="col-md-4">{{ form_row(form.montant)}}</div>
                        <div class="col-md-4">{{ form_row(form.banque)}}</div>
                        <div class="col-md-4">{{ form_row(form.type_reglement)}}</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-4">{{ form_row(form.delegue)}}</div>
                        <div class="col-md-4">{{ form_row(form.emetteur_cheque)}}</div>
                        <div class="col-md-4">{{ form_row(form.date_versement)}}</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-4">
                            <button class="btn btn-primary btn-sm">{{ button_label|default('Paiement') }} <i class="fa fa-save p-1"></i></button>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div> 
{% endblock %}
 
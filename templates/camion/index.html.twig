{% extends 'base.html.twig' %}

{% block title %}Camion index{% endblock %}

{% block body %}
<div class="content-wrapper">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="row">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-header">

                                <div class="row">
                                    <div class="col-md-3">
                                        <h4 class="card-title">Liste des camions</h4>
                                    </div>
                                    <div class="col-md-9 text-end">
                                        <a href="#" class="btn btn-secondary text-white">Nombres : {{ camions | length}}</a>
                                        <!-- Button trigger modal -->
                                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                            Ajouter<i class="mdi mdi-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                {% for message in app.flashes('success') %}
                                    <div class="alert alert-success">
                                        {{ message }}
                                    </div>
                                {% endfor %}
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead class="table-dark">
                                        <tr>
                                            <th width="2">N°</th>
                                            <th>Numéro Camion</th>
                                            <th>Chauffeur</th>
                                            <th>Model</th>
                                            <th>Marque</th>
                                            <th class="text-center" width="350"></th>
                                        </tr>
                                        </thead>
                                        <tbody>

                                        {% set i = 0 %}
                                        {% for camion in camions %}
                                            {% set i = i + 1 %}
                                            <tr>
                                                <td>{{ i }}</td>
                                                <td>{{ camion.numeroCamion }}</td>
                                                <td>{{ camion.chauffeur }}</td>
                                                <td>{{ camion.model }}</td>
                                                <td>{{ camion.marque }}</td>
                                                <td class="text-center">
                                                    <a class="btn-sm btn btn-success text-white btn-sm" href="{{path('app_camion_show', {'id' : camion.id})}}">Détails <i class="mdi mdi-eye"></i></a>
                                                    <a class="btn-sm btn btn-info btn-sm text-white" href="{{path('app_recette_camion_new', {'id' : camion.id})}}?name=recette_camion">Recettes <i class="mdi mdi-check"></i></a>
                                                    <a class="btn-sm btn btn-primary btn-sm text-white" href="{{path('app_depense_camion_new', {'id' : camion.id})}}">Dépenses <i class="mdi mdi-check"></i></a>
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="10">Pas de Camion </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Ajouter</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            {{ form_start(form) }}
                <div class="modal-body">
                    {{ form_widget(form) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

{% endblock %}

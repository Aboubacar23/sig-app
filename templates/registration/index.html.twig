{% extends 'base.html.twig' %}

{% block title %}admin index{% endblock %}

{% block body %}

<div class="content-wrapper">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="row">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-header">

                                <div class="row">
                                    <div class="col-md-3">
                                        <h4 class="card-title">Liste des administrateurs</h4>
                                    </div>
                                    <div class="col-md-9 text-end">
                                        <a href="#" class="btn btn-secondary text-white">Nombres : {{ users | length}}</a>
                                        <a href="{{path('app_register')}}" class="btn btn-primary btn-flow">Ajouter<i class="mdi mdi-plus"></i></a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                {% for message in app.flashes('success') %}
                                    <div class="alert alert-success">
                                        {{ message }}
                                    </div>
                                {% endfor %}
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>N°</th>
                                                <th>Username</th>
                                                <th>Nom</th>
                                                <th>Prenom</th>
                                                <th>Email</th>
                                                <th>Tél</th>
                                                <th>Roles</th>
                                                <th>Ville</th>
                                                <th>Pays</th>
                                                <th>Images</th>
                                                <th class="text-center" width="250">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                        {% set i = 0 %}
                                        {% for user in users %}
                                            {% set i = i + 1 %}
                                            <tr>
                                                <td>{{ i }}</td>
                                                <td>{{ user.username }}</td>
                                                <td>{{ user.nom }}</td>
                                                <td>{{ user.prenom }}</td>
                                                <td>{{ user.email }}</td>
                                                <td>{{ user.tel }}</td>
                                                <td>
                                                    {% for role in user.roles %}
                                                        {% if role == "ROLE_SUPER_ADMIN" %}
                                                            Super Admin
                                                        {% elseif role == "ROLE_ADMIN" %}
                                                            Admin
                                                        {% endif %}
                                                    {% endfor %}
                                                </td>
                                                <td>{{ user.ville }}</td>
                                                <td>{{ user.pays | country_name }}</td>
                                                <td>
                                                    {% if user.image == '' %}
                                                        <img src="{{asset('images/images/user.png')}}" height="50" width="50">
                                                    {% else %}
                                                        <img src="{{asset('images/employees/'~ user.image)}}" height="50" width="50">
                                                    {% endif %}
                                                </td>
                                                <td class="text-center">
                                                    <a class="btn-sm btn btn-success text-white btn-sm" href="{{path('app_user_show', {'id' : user.id})}}">Détails <i class="mdi mdi-eye"></i></a>
                                                    <a class="btn-sm btn btn-primary btn-sm" href="{{path('app_user_edit', {'id' : user.id})}}">Modifier <i class="mdi mdi-pencil-box-outline"></i></a>
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="10">Pas d'administrateur </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

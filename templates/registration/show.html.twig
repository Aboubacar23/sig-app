{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<div class="container-xl">
    <div class="page-header d-print-none">
        <div class="row g-2 align-items-center">
            <div class="col">
            <h2 class="page-title">
                Administration
            </h2>
            </div>
        </div>
    </div>
</div>
<div class="page-body">
    <div class="container-xl">
        <div class="row row-cards">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Détail Admin</h4>
                    </div>
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-md-9">
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <th>Nom</th>
                                            <td>{{ user.nom }}</td>
                                            <th>Prénom</th>
                                            <td>{{ user.prenom }}</td>
                                        </tr>
                                        <tr>
                                            <th>Email</th>
                                            <td>{{ user.email }}</td>
                                            <th>Telephone</th>
                                            <td>{{ user.tel }}</td>
                                        </tr>
                                        <tr>
                                            <th>Pays</th>
                                            <td>{{ user.pays }}</td>
                                            <th>Ville</th>
                                            <td>{{ user.ville }}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-md-3">
                                <span>
                                    {% if user.image == '' %}
                                        <img src="{{asset('images/user.png')}}" height="200" width="400">
                                    {% else %}
                                        <img src="{{asset('images/employees/'~ user.image)}}" height="200" width="400">
                                    {% endif %}
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-end">
                        <div class="d-flex">
                            <div class="row">
                                <div class="col-md-3">
                                    <a href="{{path('app_user_index')}}" class="btn btn-secondary btn-sm m-2">Retour</a>
                                </div>
                                <div class="col-md-3">
                                    <a href="{{path('app_user_edit', {'id' : user.id })}}" class="btn btn-warning btn-sm m-2 ms-auto">Modifier</a>
                                </div>
                                <div class="col-md-3 p-2"> 
                                        {{ include('registration/_delete_form.html.twig') }}
                                </div>
                            </div>
                        </div>
                    </div>    
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
